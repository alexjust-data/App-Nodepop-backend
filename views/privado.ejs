<!-- Ads area -->

<!-- Cards de Anuncios con opción de eliminar -->
<main class="main-container">
    <div class="header-container" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
          <!-- Basic features section-->
        <section class="bg-light">
            <div class="container px-5">

                <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
                    <div class="col-12 col-lg-5">
                        <h2 class="display-4 lh-1 mb-4"><%= __('Private zone') %></h2>
                    </div>
                    <div class="col-12 col-lg-5">
                        <p>User: <%= email %></p>
                    </div>
                </div>

                
            </div>
        </section>
        <div class="col-12 col-lg-5">
            <h3 class="text-center mb-0">Tus anuncios</h3>
        </div>
        <a href="/ad-new" class="btn btn-custom">Crear nuevo anuncio</a>

    </div>
    <div class="cards-container">
        <% ads.forEach(ad => { %>
            <div class="card">
                <img src="/img/<%= ad.img %>" class="card-img" alt="<%= ad.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= ad.name %></h5>
                    <p class="card-text"><%= ad.option ? 'Venta' : 'Búsqueda' %>: <%= ad.price %> EUR</p>
                    <p class="card-text"><small class="text-muted">Tags: <%= ad.tags.join(', ') %></small></p>
                    <a onclick="confirmDeleteAd('<%= ad.name %>', '<%= ad._id %>')" href="javascript:void(0);">
                        <i class="bi bi-trash"></i> Eliminar Anuncio
                    </a>
                </div>
            </div>
        <% }); %>
    </div>
</main>

<script>
    function confirmDeleteAd(name, adId) {
        if (confirm(`Estas seguro que quieres eliminar el anuncio ${name}?`)) {
            window.location.href = `/ads-delete/${adId}`;
        }
    }
</script>

